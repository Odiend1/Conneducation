<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    .post{
      border: 1px solid black;
      margin: 10%;
      padding: 2%;
    }
  </style>
  <title>Document</title>
</head>
<body>
  <form id="uploadForm" enctype="multipart/form-data" hidden>
    <label for="userId">User ID:</label>
    <input type="text" id="userId" name="userId" required><br><br>
    
    <label for="file">Choose file:</label>
    <input type="file" id="file" name="file" required><br><br>
    
    <button type="submit">Upload</button>
  </form>
  <div id="posts-container"></div>
  <script>
    const form = document.getElementById('uploadForm');
    var postsContainer = document.getElementById('posts-container');
    async function getPosts(){
      try {
        const response = await fetch('/get-posts', {
          method: 'GET'
        });
        
        const result = await response.json();
        var posts = result.posts;
        posts = posts.reverse();
        posts.forEach((post) => {
          var postContainer = document.createElement('div');
          postContainer.classList.add('post');
          var documentName = document.createElement('h3');
          documentName.innerHTML = post;
          postContainer.appendChild(documentName);
          var downloadLink = document.createElement('a');
          downloadLink.innerHTML = "Download";
          downloadLink.download = post;
          downloadLink.href = "posts/" + post;
          postContainer.append(downloadLink);
          postsContainer.appendChild(postContainer);
        })
      } 
      catch (error) {
        alert(`Error: ${error.message}`);
      }
    }
    getPosts();
    
    form.addEventListener('submit', async (event) => {
      event.preventDefault();

      const formData = new FormData(form);

      try {
        const response = await fetch('/upload-submission', {
          method: 'POST',
          body: formData,
        });
        
        const result = await response.json();
        alert(`Success: ${result.message}`);
      } catch (error) {
        alert(`Error: ${error.message}`);
      }
    });
  </script>
</body>
</html>